{
  "name": "ntt-desktop-packager",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "electron src/",
    "pack:all": "electron-packager src/ ntt --platform=all --arch x64 --out dist --overwrite",
    "pack:windows": "electron-packager src/ ntt --platform=win32 --arch x64 --out dist --overwrite",
    "pack:linux": "electron-packager src/ ntt --platform=linux --arch x64 --out dist --overwrite"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^2.0.2",
    "electron-packager": "^12.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "jsdoc": "^3.5.5",
    "prettier": "^1.13.4"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
